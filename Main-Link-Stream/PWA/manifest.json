{
    "name": "Link River",
    "short_name": "StreamLink",
    "start_url": ".",
    "description": "Central hub for all your links",
    "scope": "/",
    "orientation": "portrait-primary",
    "icons": [
        {
            "src": "**/logo.svg",
            "type": "image/svg+xml",
            "sizes": "any",
            "purpose": "maskable any"
        }
    ],
    "dir": "ltr",
    "lang": "en-US",
    "display_override": ["browser","minimal-ui","fullscreen"],
    "display": "standalone",
    "theme_color": "#000000",
    "background_color": "#ffffff",  
    "prefer_related_applications": false,
    "serviceworker": {
        "src": "/sw.js",
        "scope": "/",
        "use_cache": true
    },
    "share_target": {
        "action": "/share",
        "method": "GET",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url"
        }
    },
    "gcm_sender_id": "103953800507",
    "gcm_user_visible_only": true
}